# Server Configuration
PORT=3000

# Twitch Application Credentials
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Twitch Channel Configuration
TWITCH_CHANNEL_NAME=your_channel_name_here
TWITCH_CHANNEL_ID=your_channel_id_here

# EventSub Configuration
# For local development, you'll need ngrok or similar
# The callback URL should be: https://your-domain.com/eventsub/callback
EVENTSUB_CALLBACK_URL=https://your-ngrok-url.ngrok.io/eventsub/callback
EVENTSUB_SECRET=your_random_secret_here

# Access Token (will be generated via OAuth)
# Leave empty initially - will be populated by auth flow
TWITCH_ACCESS_TOKEN=
TWITCH_REFRESH_TOKEN=
